@using Microsoft.AspNetCore.Identity
@model BLL.DTO.CalendarEventDTO
@inject UserManager<IdentityUser> _userManager;

@{
    ViewData["Title"] = "Add calendar event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add calendar event</h2>

<div class="row">
    <div class="col-md-6 bg-light rounded p-2 border-dark">
        <form asp-action="AddCalendarEvent">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="OwnerId" value="@(_userManager.GetUserId(User))"/>

            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <input asp-for="EventDate" class="form-control"/>
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input type="time" asp-for="Duration" class="form-control"/>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control"/>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
