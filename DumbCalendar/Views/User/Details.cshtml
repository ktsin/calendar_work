@using Microsoft.AspNetCore.Identity
@model BLL.DTO.UserDTO
@inject UserManager<IdentityUser> _userManager;

@{
    ViewData["Title"] = "User details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>User details:</h4>

<div class="d-flex justify-content-center mb-4">
    <div class="card">
        <h3 class="card-header">@(Model.FullName)</h3>
        <p class="card-text px-3 py-1">
            <b>Email</b> - @((await _userManager.GetUserAsync(User))?.Email)
        </p>
        <p class="card-text px-3">
            <b>Birthday</b> - @(Model?.Birthday.ToString("dd/MM/yyyy"))
        </p>
        <div class="card-footer">
            <a class="w-100 p-1s" asp-controller="Messages" asp-action="Details" asp-route-id="@(Model.Id)">
                <button class="btn btn-success w-100">
                    Send message!
                </button>
            </a>
        </div>
    </div>
</div>

