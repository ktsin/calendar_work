@using BLL.DTO
@model BLL.DTO.ProjectTaskDTO

<div class="row p-0">
    <div class="col">
        <form asp-action="AddProjectTask" class="p-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-1">
                <label asp-for="ProjectId" clas1s="control-label"></label>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
            </div>
            <div class="form-group p-1">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control"/>
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group p-1">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<TaskPriority>()"></select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group p-1">
                <label asp-for="TaskStart" class="control-label"></label>
                <input asp-for="TaskStart" class="form-control"/>
                <span asp-validation-for="TaskStart" class="text-danger"></span>
            </div>
            <div class="form-group p-1">
                <label asp-for="TaskEnd" class="control-label"></label>
                <input asp-for="TaskEnd" class="form-control"/>
                <span asp-validation-for="TaskEnd" class="text-danger"></span>
            </div>
            <div class="form-group p-1">
                <input type="submit" value="Create" class="btn btn-primary w-100"/>
            </div>
        </form>
    </div>
</div>
